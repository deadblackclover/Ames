@media screen and (max-height: 500px) and (max-width: 400px)
  .header img
    width 100px

.index
  text-align center
  background-image url('/logo.png')
  background-repeat no-repeat
  background-position center center

  @media screen and (min-height: 325px)
    height 100vh

.header,.main,.footer
  display flex
  flex-direction column
  justify-content center
  align-items center
  word-wrap break-word

.header, .main 
  height 200px
  background-color rgba(138,159,171,0.5)
  padding 30px 0

.main .email, .main .auth
  margin 5px

.main
  .email
    border 0
    background-color #c4cfd5
    padding 7px
    border-radius 5px

.auth, .auth:hover
  background-color #c4cfd5
  border 0
  border-radius 5px
  padding 7px
  width 242px
  &:hover
    box-shadow 0 0 5px rgba(76,76,81, 0.5)

.footer
  background-color #4c4c51
  color white
  padding 16px 0
  font-size 14px
  a, a:visited, a:active, a:hover
    text-decoration none
    color white