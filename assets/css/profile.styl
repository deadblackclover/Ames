.main-profile, .left, .profile, .right
  display flex

.main-profile
  flex-direction row

.left, .profile, .right
  flex-direction column

.profile
  justify-content center

.main-profile
  width 100%
  
  @media screen and (min-height: 296px)
    height 100vh

.left
  background-color #4c4c51
  text-align center
  color white
  font-size 20px
  width 130px
  height 100%

.right
  background-color white
  width 100%

.profile
  background-color rgb(214,214,214)
  padding-top 20px
  padding-bottom 20px
  align-items center
  color #323232

.photo
  border-radius 40px
	width 80px
	height 80px

.menu
  padding-top 10px
  padding-bottom 10px

.btn:hover
  background-color rgb(214,214,214)
  color #323232

.block
  display flex
  flex-direction column
  justify-content center
  align-items center

.name-blocks
  background-color #4c4c51
  color white
  padding 5px 0
  text-align center
  font-size 20px
  width 100%